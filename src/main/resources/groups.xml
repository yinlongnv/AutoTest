<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="groupsName">

    <test name="runAll">
        <classes>
            <class name="com.dadalong.testng.groups.GroupsOnClass1"></class>
            <class name="com.dadalong.testng.groups.GroupsOnClass2"></class>
            <class name="com.dadalong.testng.groups.GroupsOnClass3"></class>
        </classes>
    </test>
    <test name="onlyRunClass">
        <groups>
            <run>
                <include name="class1" />
                <include name="class2" />
            </run>
        </groups>
        <classes>
            <class name="com.dadalong.testng.groups.GroupsOnClass1"></class>
            <class name="com.dadalong.testng.groups.GroupsOnClass2"></class>
            <class name="com.dadalong.testng.groups.GroupsOnClass3"></class>
        </classes>
    </test>

    <test name="search">
        <classes>
            <class name="com.dadalong.testng.suite.SuiteConfig"></class>
            <class name="com.dadalong.testng.suite.SearchTest"></class>
        </classes>
    </test>

</suite>